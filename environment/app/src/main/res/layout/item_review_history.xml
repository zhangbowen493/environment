<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:background="@color/white_1"
        android:paddingBottom="14dp"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/todo_complete" />


        <TextView
            android:id="@+id/tv_todo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="活动名称："
            android:textColor="@color/colorTitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_todo_1"
            android:layout_toRightOf="@+id/tv_todo_1"
            android:text="流程1"
            android:textColor="@color/Textcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_todo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_todo_1"
            android:layout_marginTop="12dp"
            android:text="到达时间："
            android:textColor="@color/colorTitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_todo_2"
            android:layout_toRightOf="@+id/tv_todo_2"
            android:text="2017.01.01"
            android:textColor="@color/Textcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_todo_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_todo_2"
            android:layout_marginTop="12dp"
            android:text="审核时间："
            android:textColor="@color/colorTitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_time_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_todo_3"
            android:layout_toRightOf="@+id/tv_todo_3"
            android:text="2017.01.01"
            android:textColor="@color/Textcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_todo_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_todo_5"
            android:layout_marginTop="12dp"
            android:text="审核意见："
            android:textColor="@color/colorTitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_opinion_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_todo_4"
            android:layout_toRightOf="@+id/tv_todo_4"
            android:text="同意"
            android:textColor="@color/Textcolor"
            android:textSize="13sp" />

        <View
            android:id="@+id/tv_todo_6"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_alignBaseline="@+id/tv_todo_4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_todo_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_todo_3"
            android:layout_marginTop="12dp"
            android:text="审核人："
            android:textColor="@color/colorTitle"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_people_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_todo_5"
            android:layout_toRightOf="@+id/tv_todo_5"
            android:text="超级管理员"
            android:textColor="@color/Textcolor"
            android:textSize="13sp" />

    </RelativeLayout>


</LinearLayout>