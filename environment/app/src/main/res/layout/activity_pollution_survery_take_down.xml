            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="邮政编码："/>

                <EditText
                    android:id="@+id/VC_YZBM"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>

            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="其它参加人姓名及工作单位："/>

                <EditText
                    android:id="@+id/VC_QTCJTCXWRXMJGZDW"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>

            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="环境监察类型："/>

                <EditText
                    android:id="@+id/VC_HJJCLX"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>

            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="是否确认证件："/>

                <EditText
                    android:id="@+id/VC_SFQRZJ"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>

            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="是否申请回避："/>

                <EditText
                    android:id="@+id/VC_SFSQHB"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>
            <View style="@style/ViewItemLine"/>

            <LinearLayout style="@style/LinearlayoutOutside">

                <TextView
                    style="@style/TextViewLeft"
                    android:text="询问内容："/>

                <EditText
                    android:id="@+id/CL_XWNR"
                   style="@style/EditTextRight"
                    android:text=""/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
